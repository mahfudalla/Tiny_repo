<%= form_for(@url) do |f| %>
  <% if @url.errors.any? %>
    .
    .
    .
  <% end %>

  <div class="form-group">
    <%= f.label :original %><br>
    <%= f.url_field :original, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :custom, 'Custom Url' %><br>
    <%= f.text_field :custom, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary btn-lg" %>
<% end %>
